    android:layout_height="fill_parent"
    android:background="@color/greyWeak"
    android:orientation="vertical" >
    <Spinner android:id="@+id/CmbOpcions"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content" />
	<TextView
	   android:id="@+id/Titol"
	   android:layout_width="fill_parent"
	   android:layout_height="wrap_content"
